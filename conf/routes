# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Port management API
GET     /ports                                  controllers.Application.listPorts
POST    /newPort                                controllers.Application.createPort
PUT     /updatePort/:portName/:locode/:polygon  controllers.Application.updatePort(portName: String, locode: String, polygon: Ploygon)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
